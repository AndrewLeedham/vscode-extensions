// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
    "configurations": [
        {
            "name": "VSCode CSS Modules Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/packages/vscode-css-modules/__fixtures__",
                "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-css-modules"
            ]
        },
        {
            "name": "VSCode Modular CSS Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/packages/vscode-modular-css/__fixtures__",
                "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-modular-css"
            ]
        }
    ]
}